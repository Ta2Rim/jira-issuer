{
    "manifest_version": 2,

    "name": "jira-issuer",
    "description":
        "build tool for customized web extension to help create JIRA issue\n\n",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "content_scripts" : [
        {
            "matches": [ "<all_urls>" ],
            "js": ["js/popup.js"]
        }
    ],

    "icons": {
        "16": "icon16.png"
    },

    "permissions": []
}

{
    "manifest_version": 2,

    "name": "Chrome Extension (built with TypeScript + React)",
    "description":
        "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "content_scripts" : [
        {
            "matches": [ "<all_urls>" ],
            "js": ["js/popup.js"]
        }
    ],

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
        "identity",
        "https://*.atlassian.com/",
        "https://*.atlassian.net/",
        "https://api.atlassian.com/oauth/token/accessible-resources"
    ],
    "oauth2": {
        "client_id": "tmi53Gr2TISSaWud3wQ1wu7do0MNvq27",
        "scopes": ["https://api.atlassian.com/oauth/token/accessible-resources"]
    }
}
